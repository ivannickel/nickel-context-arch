{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/validate_new_file.py ${FILE_PATH}",
            "description": "Validate new markdown files have frontmatter before creation"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/check_broken_links.py ${FILE_PATH}",
            "description": "Check for broken wiki-links before editing"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/update_graph_index.py ${FILE_PATH}",
            "description": "Update graph index after file creation"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "type": "command",
        "command": "python ${CLAUDE_PLUGIN_ROOT}/scripts/graph_health_check.py --quick",
        "description": "Quick graph health check on session start"
      }
    ]
  }
}
